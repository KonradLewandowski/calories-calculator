extends main

block content
    
        .login-form
            h2.heading-secondary.ma-bt-lg Create your account
            form.form.form-signup
                .form__group
                    label.form__label(for='text') Name
                    input#name-signup.form__input(type='text', placeholder='Name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email-signup.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    label.form__label(for='password') Password
                    input#password-signup.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    label.form__label(for='password') Confirm Password
                    input#password__confirm-signup.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.btns
                    a(href='#'): button.btn Create Account
                    